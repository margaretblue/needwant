<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/wishlist_form' %>
      </section>
    </aside>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>NeedWant</h1>

    

    <%= link_to "Sign up", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>

  
<% end %>